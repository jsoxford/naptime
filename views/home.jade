extends layout

block content

    .page-header
        h1 naptime - the npm dependency viewer

    .row
        form.well(method="post")
            fieldset
                legend paste your package.json
                .control-group
                    label.control-label(for="packagetextarea")
                    textarea.span10#packagetextarea(name="data", rows=20)
                        |{
                        |  "name": "nko3-woah",
                        |  "version": "0.0.0",
                        |  "description": "woah",
                        |  "main": "server.js",
                        |  "scripts": {
                        |    "start": "node server.js"
                        |  },
                        |  "repository": {
                        |    "type": "git",
                        |    "url": "git@github.com:nko3/woah.git"
                        |  },
                        |  "dependencies": {
                        |    "express": "3.0.2",
                        |    "jade": ">= 0.0.1"
                        |  },
                        |  "engines": {
                        |    "node": "0.8.x"
                        |  },
                        |  "subdomain": "woah.nko3"
                        |}
                input.btn.btn-large(type="submit",value="Send")

    .deps(data-deps=deps)

